<div class="form-container ml-5 mt-5">
  <%= form_tag invitations_path do %>
    <h4>Invite a Friend</h4>
    <div class="form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email, nil, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :message %>
      <%= text_area_tag :message, nil, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag 'Send' %>
    </div>
  <% end %>
</div>