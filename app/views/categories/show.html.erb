<% content_for :header do %>
  <ul class="nav">
    <li class="nav-item">
      <%= link_to categories_path, class: "link-icon header-button btn btn-sm" do %>
        <%= octicon "arrow-left" %>
        <p>Back</p>
      <% end %>
    </li>
  </ul>
<% end %>

<div class="pt-2">
  <ul>
    <% @category.recipes.each do |recipe| %>
      <li>
        <%= link_to recipe_path(recipe) do %>
          <h5><%= recipe.name %></h5>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>