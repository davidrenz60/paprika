<%= form_for [recipe, comment], url: recipe_comments_path(recipe.id), remote: true, html: { class: "hidden"}, data: { type: "html", action: "ajax:success->comments#create", target: "comments.form" } do |f| %>
  <div class="form-group">
    <h5>Add a comment</h5>
    <%= f.text_area :body, class: "form-control", required: true, data: { target: "comments.textarea" } %>
  </div>
  <div class="form-group">
    <%= submit_tag 'Submit', class: "btn btn-secondary" %>
  </div>
<% end %>