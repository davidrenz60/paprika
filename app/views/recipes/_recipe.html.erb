<li data-target="search.name" data-name="<%= recipe.name %> "class="recipe-list-item py-1 pl-2">
  <%= link_to recipe_path(recipe) do %>
    <div class="d-flex">
      <div>
        <%= render 'shared/recipe_img', recipe: recipe %>
      </div>
      <div class="recipe-list-item-info ml-1 mt-1">
        <h5 class="mb-0"><%= recipe.name %></h5>
        <%= render 'ratings/average_rating', rating_class: recipe.average_rating_class, id: nil %>
      </div>
    </div>
  <% end %>
</li>