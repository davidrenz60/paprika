<div class="form-container ml-5 mt-5">
  <%= form_for '/login' do  %>
    <h4>Login</h4>
    <div class="form-group">
      <%= label_tag :username %>
      <%= text_field_tag :username, nil, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag 'Login' %>
    </div>
  <% end %>
</div>