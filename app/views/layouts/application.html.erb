<!DOCTYPE html>
<html>
  <head>
    <title>Paprika</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <div class="header">
      <% if logged_in? && current_user.admin? %>
        <%= link_to sync_recipes_path, method: "post", class: "link-icon" do %>
          <%= octicon "sync", height: 24 %>
          <p>Sync</p>
        <% end %>
      <% end %>
    </div>
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-2 menu py-2 px-0">
          <%= render 'layouts/menu' %>
          <%= render 'layouts/messages' %>
        </div>
        <div class="col-lg-10 content p-0">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
