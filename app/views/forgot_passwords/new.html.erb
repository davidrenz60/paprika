<div class="form-container ml-5 mt-5">
  <%= form_tag '/forgot_passwords' do %>
    <h4>Forgot Password</h4>
    <div class="form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email, nil, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag 'Submit' %>
    </div>
  <% end %>
</div>